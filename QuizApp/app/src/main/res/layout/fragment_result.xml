<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_gradient"
    tools:context=".ui.main.quizItems.result.ResultFragment">

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_result"
        android:textSize="35dp"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/white"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ProgressBar
        android:id="@+id/resultProgress"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        app:indicatorColor="@color/white"
        android:indeterminateTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvResult"/>

    <TextView
        android:id="@+id/tvResultCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="10"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:fontFamily="@font/montserrat_medium"
        app:layout_constraintTop_toTopOf="@+id/resultProgress"
        app:layout_constraintBottom_toBottomOf="@+id/resultProgress"
        app:layout_constraintEnd_toEndOf="@+id/resultProgress"
        app:layout_constraintStart_toStartOf="@+id/resultProgress"/>

    <TextView
        android:id="@+id/tvCorrectAns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_correct"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_regular"
        android:layout_marginTop="80dp"
        android:layout_marginStart="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultProgress"/>

    <TextView
        android:id="@+id/tvWrongAns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_wrong"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_regular"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="@+id/tvCorrectAns"
        app:layout_constraintTop_toBottomOf="@+id/tvCorrectAns"/>

    <TextView
        android:id="@+id/tvNotAns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_answer"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_regular"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="@+id/tvWrongAns"
        app:layout_constraintTop_toBottomOf="@+id/tvWrongAns"/>

    <TextView
        android:id="@+id/tvCorrect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_number"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_regular"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvCorrectAns"/>

    <TextView
        android:id="@+id/tvWrong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_number"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_regular"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvWrongAns"/>

    <TextView
        android:id="@+id/tvNoAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_number"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_regular"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvNotAns"/>


    <com.google.android.material.button.MaterialButton
    android:id="@+id/btnHome"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    style="@style/Style.NextButton"
    android:layout_marginTop="130dp"
    android:layout_marginHorizontal="30dp"
    android:text="@string/goto_restart"
    android:fontFamily="@font/montserrat_medium"
    app:layout_constraintTop_toBottomOf="@+id/tvNotAns"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/tvLogout"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:layout_margin="15dp"
        android:src="@drawable/ic_logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>