<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="black">#FF000000</color>
    <color name="dark_green">#D9009688</color>
    <color name="grey">#A0A5AB</color>
    <color name="grey_light">#D5D9DE</color>
    <color name="light_green">#80A8CFEA</color>
    <color name="status_bar_color">#241EE3CF</color>
    <color name="white">#FFFFFFFF</color>
    <string name="app_name">Unit Converter</string>
    <style name="Base.Theme.UnitConverter" parent="Theme.Material3.Light.NoActionBar">
        

        
        
        
        <item name="android:statusBarColor">#D9009688</item>
        
    </style>
    <style name="Style.InputEditText" parent="Widget.AppCompat.EditText">
        <item name="android:drawablePadding">11dp</item>
        <item name="android:paddingTop">19dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSize">16sp</item>
        <item name="maxLines">1</item>
        
    </style>
    <style name="Style.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:shadowColor">#0D000000</item>
        <item name="android:shadowDx">9</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">12</item>
        <item name="boxCornerRadiusBottomEnd">5dp</item>
        <item name="boxCornerRadiusBottomStart">2dp</item>
        <item name="boxCornerRadiusTopStart">3dp</item>
        <item name="boxCornerRadiusTopEnd">2dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="boxStrokeWidthFocused">3dp</item>
        <item name="hintEnabled">false</item>
    </style>
    <style name="Theme.UnitConverter" parent="Base.Theme.UnitConverter"/>
</resources>